- form_for :match, nil, :url => matches_path do |f|
  .team
    %label= 'Team'[] + ':'
    = f.collection_select 'user11', enabled_users, :id, :name, { :prompt => 'Offense'[] }, { :class => 'user' }
    = f.collection_select 'user12', enabled_users, :id, :name, { :prompt => 'Defense'[] }, { :class => 'user' }
    %label= 'Score'[] + ':'
    = f.text_field 'score1', :class => 'score', :autocomplete => 'off'
  .team
    %label= 'Team'[] + ':'
    = f.collection_select 'user21', enabled_users, :id, :name, { :prompt => 'Offense'[] }, { :class => 'user' }
    = f.collection_select 'user22', enabled_users, :id, :name, { :prompt => 'Defense'[] }, { :class => 'user' }
    %label= 'Score'[] + ':'
    = f.text_field 'score2', :class => 'score', :autocomplete => 'off'
    = submit_tag 'Add'[], :disable_with => 'Adding'[] + '&hellip;'
    = link_to_function 'Cancel'[], "$('#add_match_form').hide()"