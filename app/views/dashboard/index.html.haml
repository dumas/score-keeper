- title 'Dashboard'[]

- cache(root_path) do
  - if @rankings.size > 0
    = render :partial => 'leaderboard', :locals => { :people => @rankings, :start_at => 1, :title => 'Rankings'[] }

  - if @newbies.size > 0
    = render :partial => 'leaderboard', :locals => { :people => @newbies, :start_at => @rankings.size + 1, :title => 'Newbies'[] }

#recent_games.column.span-11
  = render :partial => 'recent_games', :locals => { :recent_games => @recent_games }
      
- cache(root_path + '_games_per_day') do
  #games_per_day.column.span-7.last
    = render :partial => 'games_per_day', :locals => { :games_per_day => @games_per_day }

- content_for :sidebar do
  - cache(root_path + '_sidebar') do
    - unless @leader.nil?
      #leader
        %h3= 'Leader'[]
        .mugshot= link_to image_tag(@leader.mugshot.public_filename(:thumb), :alt => @leader.name), user_path(@leader) if @leader.mugshot
        = user_link_full @leader

    #counts
      %p
        %label= 'Games played'[] + ':'
        = @game_count
      %p
        %label= 'Goals scored'[] + ':'
        = @goals_scored
      - unless @all_time_high.nil?
        %p
          %label= 'All time high'[] + ':'
          = link_to @all_time_high.current_ranking, game_path(@all_time_high.team.game), :class => 'game'
          = 'by'[]
          = user_link_full @all_time_high.user
      - unless @all_time_low.nil?
        %p
          %label= 'All time low'[] + ':'
          = link_to @all_time_low.current_ranking, game_path(@all_time_low.team.game), :class => 'game'
          = 'by'[]
          = user_link_full @all_time_low.user