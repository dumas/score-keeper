%td.members
  = link_to image_tag('icons/sport_soccer.png', :class => 'team', :alt => "Show this team's matches"[]), matches_path(:filter => match.teams.first.team_ids)
  = render :partial => 'matches/members', :locals => { :team => match.teams.first }

%td.score{ :nowrap => 'nowrap' }
  - if match.teams.first.score > match.teams.last.score
    = image_tag('icons/medal_gold_2.png', :class => 'winner')
  - else
    = image_tag('icons/blank.gif', :width => 16, :height => 16, :class => 'loser')
  
  = match.teams.collect(&:score).join(' - ')
  - if match.teams.last.score > match.teams.first.score
    = image_tag('icons/medal_gold_2.png', :class => 'winner')
  - else
    = image_tag('icons/blank.gif', :width => 16, :height => 16, :class => 'loser')

