- title 'Register new OpenID for account'[]

= error_messages_for :user_openid

- form_for :user_openid, :url => user_user_openids_url(@user) do |f|
  %p
    %label
      = 'OpenID'[] + ':'
      = text_field_tag :openid_url
      
  %p
    = submit_tag 'Add'[], :disable_with => 'Adding'[] + '&hellip;'

= link_to 'Back'[], edit_user_url(@user)
