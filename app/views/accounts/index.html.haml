- title 'Accounts'[]
.list
  %table
    %tr
      %th= 'Name'[]
      %th= 'Domain'[]
      %th= 'Users'[]
      %th= 'Games'[]
    - @accounts.each do |account|
      %tr{ :class => cycle('odd', 'even') }
        %td= link_to h(account.name), account
        %td= h(account.domain)
        %td= account.users.count
        %td= account.games.count